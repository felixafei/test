= form_for @tree do |f|
  -if @tree.errors.any?
    #error_explanation
      %h2= "#{pluralize(@tree.errors.count, "error")} prohibited this tree from being saved:"
      %ul
        - @tree.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :parent_id
    = f.number_field :parent_id
  .field
    = f.label :lft
    = f.number_field :lft
  .field
    = f.label :rgt
    = f.number_field :rgt
  .field
    = f.label :depth
    = f.number_field :depth
  .actions
    = f.submit 'Save'
